{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "Node"
  },
  "include": ["./**/*.ts"]
}
